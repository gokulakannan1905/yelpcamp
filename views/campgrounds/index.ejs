<% layout('layouts/boilerplate') %> 
    <h1>All Campgrounds</h1>
    <a class="btn btn-primary mb-3" href="/campgrounds/new"> Create Campground </a>
    <ul>
        <% for(let camp of campgrounds){ %>             
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                    <img src="<%=camp.image %>" alt="" class="card-img-top image-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title"><%=camp.title %></h3>
                            <p class="card-text"><%=camp.description %></p>
                            <p class="card-text"> <small class="text-muted"><%=camp.location %></small></p>
                            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>"> More Info</a>
                            </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
